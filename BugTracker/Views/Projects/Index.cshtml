<script>
    $('.table').DataTable({
        "columns": [
            { "width": "15%" },
            { "width": "35%" },
            { "width": "10%" },
            { "width": "15%" },
            { "width": "10%" },
            { "width": "15%" },
        ],
        "columnDefs": [{
            targets: 1,
            render: $.fn.dataTable.render.ellipsis(145)
        }]
    });

</script>

